@model UpdateProductDto
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Ürün Güncelle</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title"></div>
						</div>
						<input type="hidden" asp-for="Id" />
						<div class="card-body">
							<div class="form-group">
								<label>Ürün Adı</label>
								<input type="text" class="form-control" asp-for="Name">
							</div>
							<div class="form-group">
								<label>Ürün Fiyatı</label>
								<input type="text" class="form-control" asp-for="Price">


							</div>
							<div class="form-group">
								<label>Image Url</label>
								<input type="text" class="form-control" asp-for="ImageUrl">


							</div>
							<div class="form-group">
								<label>Ürün Kategorisi</label>
								@Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.v, new { @class = "form-control" })


							</div>
							<div class="form-group">
								<label>Ürün Açıklama</label>
								<input type="text" class="form-control" asp-for="Description">


							</div>

						</div>
						<div class="card-action">
							<button class="btn btn-success">Ekle</button>
						</div>
					</div>
				</form>
			</div>

		</div>
	</div>
</div>




