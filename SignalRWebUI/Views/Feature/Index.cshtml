@model List<ResultFeatureDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Öne Çıkanlar</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Öne Çıkanlar Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Başlık</th>
									<th scope="col">Açıklama</th>
									<th scope="col"></th>
									<th scope="col"></th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.Id</td>
										<td>@item.Title</td>
										<td>@item.Description</td>
										<td><a asp-controller="Feature" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Sil</a></td>
										<td><a asp-controller="Feature" asp-action="Update" asp-route-id="@item.Id" class="btn btn-outline-info">Güncelle</a></td>
									</tr>
								}

							</tbody>
						</table>
						<a asp-action="Create" asp-controller="Feature" class="btn btn-outline-success">Oluştur</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

